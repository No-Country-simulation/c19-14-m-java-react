---
import { Image } from 'astro:assets';
import HeroImage from '../../assets/HeroImage.png';
import HeroIconLCircleLine from '../../assets/icons/HeroIconLCircleLine.astro';
import HeroIconEllipse from '../../assets/icons/HeroIconEllipse.astro';
import Button from '../Button.astro';
---

<section class="flex flex-col lg:flex-row gap-14 w-full py-16">
    <div class="flex flex-col flex-1 justify-center gap-y-16 ">
        <h2 class="text-3xl sm:text-6xl font-semibold text-black">
            Devuelve la felicidad con
            <span class="text-secondary">
                PetFinder
            </span>
        </h2>
        <div class="text-black hidden sm:flex">
            <Button text="Quiero adoptar" variant="primary" path="/adopta"/>
            <Button text="Dar en adopción" variant="secondary" path="dar-adopcion"/>
        </div>
    </div>
    <div class="flex-1 flex justify-center relative py-6">
        <Image src={HeroImage} alt="Hero image" width={1920} height={1080} class='size-[300px] lg:size-[600px]  object-contain'loading='eager'/>
    </div>
    <div class="text-black flex sm:hidden">
        <Button text="Quiero adoptar" variant="primary"/>
        <Button text="Dar en adopción" variant="secondary"/>
    </div>
</section>