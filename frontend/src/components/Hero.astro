---
import { Image } from 'astro:assets';
import HeroImage from '../assets/heroImg.png';
import HeroIconLCircleLine from '../assets/icons/HeroIconLCircleLine.astro';
import HeroIconEllipse from '../assets/icons/HeroIconEllipse.astro';
---

<section class="flex flex-col lg:flex-row gap-14 w-full py-16">
    <div class="flex flex-col flex-1 justify-center gap-y-16 ">
        <h2 class="text-6xl font-semibold text-black">
            Devuelve la felicidad con
            <span class="text-primary">
                PetFinder
            </span>
        </h2>
        <div class="text-black">
            <button class="rounded-[2rem] text-sm py-2 px-4 font-semibold bg-primary ">Quiero Adoptar</button>
            <button class="rounded-[2rem] text-sm py-2 px-4 font-semibold border-primary border-[1px]">Dar en Adopcion</button>
        </div>
    </div>
    <div class="flex-1 flex justify-center relative py-6"> 
        <HeroIconLCircleLine class='size-[150px] lg:size-[200px] absolute top-0 left-0 rotate-[-5deg]'/>
        <HeroIconLCircleLine class='size-[150px] lg:size-[200px] absolute top-0 right-0 rotate-[109deg]'/>
        <HeroIconLCircleLine class='size-[150px] lg:size-[200px] absolute -bottom-24 right-[40%] rotate-[245deg]'/>
        <Image src={HeroImage} alt="Hero image" width={1920} height={1080} class='size-[300px] lg:size-[400px] rounded-full object-cover'/>
        <HeroIconEllipse class='w-[50px] h-[50px] absolute top-0 right-5 rotate-[10deg] '/>
        <HeroIconEllipse class='w-[30px] h-[30px] absolute bottom-5 left-0 rotate-[10deg] opacity-80'/>
        <HeroIconEllipse class='w-[10px] h-[10px] absolute bottom-0 left-10 rotate-[10deg] opacity-80'/>
    </div>
</section>