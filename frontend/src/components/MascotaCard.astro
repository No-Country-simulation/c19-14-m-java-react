---
import Button from "./Button.astro"
export const prerender = false;
const {idMascot} = Astro.props;
const {data} = await fetch(`https://huachitos.cl/api/animal/${idMascot}`).then((res) => res.json());
const {nombre:name,desc_personalidad:description,imagenes,edad:age,genero:genere,comuna,region} = data
const photo = imagenes[0].imagen;
const health_tags = ['Vacunas al día', 'Desparasitado', 'Esterilizado', 'Saludable', 'Educado'];
const country = `${comuna}, ${region}`;
const info = {nickname: 'No tiene', type: 'Perro', age, genere, weight: '4kg'};
---
<div class="py-8">
    <h2 class="text-3xl font-bold mb-6 w-full text-left">
        Tu Futuro Compañero <span class="text-secondary">{name}</span>
    </h2>
    <div class="flex gap-[9rem]">
        <div class="flex flex-col gap-4 max-w-[400px]">
            <img src={photo} alt={name} class="rounded-lg object-cover w-full h-[400px]" />
            <div>
                <h3 class="mb-3 text-secondary text-2xl font-bold">Cuidados y salud</h3>
                <ul class="flex gap-2 flex-wrap">
                    {health_tags.map((tag) => (
                        <li class="px-5 py-1 w-fit text-md text-gray-600 border-[2px] border-[#EDEDED] rounded-[2rem]">
                            {tag}
                        </li>
                    ))}
                </ul>
            </div>
        </div>
        <div class="flex flex-col gap-8">
            <div class="flex flex-col gap-3 border-[2px] border-[#EDEDED] bg-[#F9F9F9] rounded-3xl p-6">
                <h3 class="font-bold text-secondary text-2xl">🐶 {name}</h3>
                <p class="text-[#0A453A] text-xl font-bold">🇦🇷 {country}</p>
                <ul class="grid grid-cols-3 gap-5">
                    <li>
                        <span>Apodo: {info.nickname}</span>
                    </li>
                    <li>
                        <span>Tipo: {info.type}</span>
                    </li>
                    <li>
                        <span>Edad: {info.age}</span>
                    </li>
                    <li>
                        <span>Género: {info.genere}</span>
                    </li>
                    <li>
                        <span>Peso: {info.weight}</span>
                    </li>
                </ul>
                <p class="max-w-[300px]" id="description-mascot">
                    {
                        description.split('>')[1].split('<')[0]
                    }
                </p>
            </div>
            <div class="border-[2px] border-[#EDEDED] bg-[#F9F9F9] rounded-3xl p-6 flex flex-col justify-center items-center">
                <p class="text-secondary font-bold text-xl">¿Te interesa?</p>
                <Button text="¡Adoptame!" variant="primary"/>
            </div>
        </div>
    </div>
</div>